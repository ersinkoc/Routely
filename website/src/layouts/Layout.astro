---
import '../styles/global.css';

const title = 'Routely';
const description = 'Type-safe React router with plugin architecture';

interface Props {
  title?: string;
  description?: string;
}

const {
  title: pageTitle = title,
  description: pageDescription = description,
} = Astro.props;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={pageDescription} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle} | {title}</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/routely/"><img src="/logo.svg" alt="Routely" width="180" height="40" /></a>
        <ul>
          <li><a href="/routely/getting-started">Getting Started</a></li>
          <li><a href="/routely/api">API</a></li>
          <li><a href="/routely/plugins">Plugins</a></li>
          <li><a href="/routely/examples">Examples</a></li>
        </ul>
        <div class="search">
          <input type="search" placeholder="Search..." />
        </div>
      </nav>
    </header>
    <main>
      <aside class="sidebar">
        <slot name="sidebar" />
      </aside>
      <div class="content">
        <slot />
      </div>
    </main>
    <footer>
      <p>&copy; 2024 Routely. Built with <a href="https://astro.build">Astro</a>.</p>
      <p>
        <a href="https://github.com/oxog/routely">GitHub</a> ·
        <a href="https://npmjs.com/package/@oxog/routely-core">npm</a> ·
        <a href="https://discord.gg/oxog">Discord</a>
      </p>
    </footer>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    line-height: 1.6;
    color: #333;
  }

  header {
    position: sticky;
    top: 0;
    background: white;
    border-bottom: 1px solid #e5e7eb;
    z-index: 100;
  }

  header nav {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0.75rem 1.5rem;
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  header nav ul {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
  }

  header nav a {
    text-decoration: none;
    color: #374151;
    font-weight: 500;
    transition: color 0.2s;
  }

  header nav a:hover {
    color: #2563eb;
  }

  .search {
    margin-left: auto;
  }

  .search input {
    padding: 0.5rem 1rem;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    width: 200px;
  }

  main {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 3rem;
    padding: 2rem 1.5rem;
  }

  .sidebar {
    position: sticky;
    top: 70px;
    height: fit-content;
  }

  .sidebar ul {
    list-style: none;
    padding: 0;
  }

  .sidebar li {
    margin-bottom: 0.5rem;
  }

  .sidebar a {
    display: block;
    padding: 0.375rem 0.75rem;
    text-decoration: none;
    color: #6b7280;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    transition: all 0.2s;
  }

  .sidebar a:hover,
  .sidebar a.active {
    background: #eff6ff;
    color: #2563eb;
  }

  .content {
    max-width: 800px;
  }

  .content h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .content h2 {
    font-size: 1.875rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .content p {
    margin-bottom: 1rem;
    color: #4b5563;
  }

  .content pre {
    background: #1f2937;
    color: #e5e7eb;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  .content code {
    background: #f3f4f6;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .content pre code {
    background: transparent;
    padding: 0;
  }

  footer {
    border-top: 1px solid #e5e7eb;
    padding: 2rem 1.5rem;
    text-align: center;
    color: #6b7280;
    font-size: 0.875rem;
  }

  footer a {
    color: #4b5563;
  }

  @media (max-width: 768px) {
    main {
      grid-template-columns: 1fr;
    }

    .sidebar {
      display: none;
    }
  }
</style>
